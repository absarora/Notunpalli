<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
  <div class='column col-sm-3'>
    <div class="form-group">
      <div class='controls'>
      <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'First name' %>
      </div>
    </div>
  </div>
  </br></br>
  
  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
      </div>
    </div>
  </div>
  </br></br>
  
  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
  </div>
  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
  </div>
  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
      </div>
    </div>
  </div>
  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-default' %>
      </div>
    </div>
  </div>
  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>