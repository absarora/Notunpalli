<h1>Contact Us</h1>

<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  
  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.text_field :name, :required => true, autofocus: true, class: 'form-control', placeholder: 'Name' %>
      </div>
    </div>
  </div>

  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.email_field :email, :required => true, autofocus: true, class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
  </div>

  </br></br>

  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.text_area :message, :required => true, class: 'col-xs-12', rows: '5', class: 'form-control', placeholder: 'Message' %>
      </div>
    </div>
  </div>
  
  </br></br></br></br>
  </br></br></br> 
    
  <div class='column col-sm-3'>
    <div class="form-group">
      <div class="controls">
        <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>